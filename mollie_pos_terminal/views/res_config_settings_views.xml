<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_mollie_pos_terminal" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_payment_terminals_section" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="mollie_terminal_api_key" class="oe_inline o_form_label"/>
                        <div class="text-muted">
                            Shared with all Pos
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="mollie_terminal_api_key" class="oe_inline" password="True" />
                            </div>
                            <div attrs="{'invisible': [('mollie_terminal_api_key', '=', False)]}">
                                <button type="action" name="%(mollie_pos_terminal.mollie_pos_terminal_action)d" icon="fa-arrow-right" class="btn-link">View Terminals</button>
                            </div>
                        </div>
                        <label for="mollie_allow_payment_splits" class="oe_inline o_form_label"/>
                        <div>
                            <field name="mollie_allow_payment_splits" class="oe_inline"
                                attrs="{'readonly': [
                                   ('pos_has_active_session', '=', True) ]}"  />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
